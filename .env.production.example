# LEOC Production Deployment Configuration
# Copy this to .env and customize for your environment

# ==================================================
# CRITICAL: Application Configuration
# ==================================================

# Flask application settings
FLASK_APP=app.py
FLASK_ENV=production
FLASK_DEBUG=False

# ==================================================
# CRITICAL SECURITY: Secret Key
# ==================================================
# IMPORTANT: Generate a strong random key with:
#   python -c 'import secrets; print(secrets.token_hex(32))'
# 
# DO NOT use the placeholder below!
# DO NOT commit real keys to version control!
SECRET_KEY=GENERATE_AND_REPLACE_WITH_YOUR_STRONG_KEY

# ==================================================
# Database Configuration
# ==================================================
# SQLite path for LAN deployment (simple and effective)
SQLALCHEMY_DATABASE_URI=sqlite:////home/prakash/Documents/App Development/leoc/instance/leoc.db

# ==================================================
# File Upload Settings
# ==================================================
UPLOAD_FOLDER=static/uploads
MAX_CONTENT_LENGTH=16777216  # 16MB max file size

# ==================================================
# Server Configuration
# ==================================================
PORT=5002

# ==================================================
# Security: Unlock Key
# ==================================================
# WARNING: Currently set to weak default 'admin123'
# For better security, should be changed to a strong password
# and hashed with bcrypt:
#   python -c 'from werkzeug.security import generate_password_hash; print(generate_password_hash("your-strong-password"))'
UNLOCK_KEY=admin123

# ==================================================
# Cache Configuration
# ==================================================
# Cache timeout in seconds
CACHE_TIMEOUT=300

# ==================================================
# Logging Configuration
# ==================================================
# Application will log to logs/app.log automatically
LOG_LEVEL=INFO

# ==================================================
# Optional: Performance Tuning
# ==================================================
# Adjust based on your LAN environment
# GUNICORN_WORKERS=4
# GUNICORN_TIMEOUT=120
